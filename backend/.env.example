# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sagareg_db

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Microsoft Azure AD / Graph API Configuration
AZURE_CLIENT_ID=your-azure-app-client-id
AZURE_CLIENT_SECRET=your-azure-app-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/microsoft/auth/microsoft/callback

# Azure Form Recognizer (for business card scanning)
AZURE_FORM_RECOGNIZER_KEY=your-form-recognizer-key
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com/

# JWT Secret for user sessions
JWT_SECRET=your-jwt-secret-key